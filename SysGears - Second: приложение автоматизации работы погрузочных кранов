input_count = int(input("how much levels?:"))


def move(f,t) :
    print("move disc from {} to {}!".format(f,t))

def hanoi(input_count,f,h,t) :
    if input_count==0 :
        pass
    else :
        hanoi(input_count-1,f,t,h)
        move(f,t)
        hanoi(input_count-1,h,f,t)


hanoi(input_count,"Slot A "," Buffer "," Slot C")
